    "\n",
    "num = int(input(\"Enter an integer: \"))\n",
    "\n",
    "# Check if the number is even (divisible by 2 with no remainder)\n",
    "if num % 2 == 0:\n",
    "    print(f\"{num} is even.\")\n",
    "else:\n",
    "    # If not even, it must be odd\n",
    "    print(f\"{num} is odd.\")"
